<!doctype html>
<html>
<head>
    <title>Authenticator</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-user"></span>Blog Page</h1>
    </div>

    <% if (typeof message !== 'undefined' && message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <div class="row">
        </div>
        <% if (posts && posts.length > 0){ %>
        <%   for( var i = 0; i < posts.length; i++) { %>
        <%       var post = posts[i].post; %>
        <%       var image = posts[i].image; %>
        <%       var blogs = posts[i].blogs %>
                <p>
                <% if (image) { %>
                    <div><img src="<%= image %>" style="height : 200px; width: 200px"/></div>
                <% } %>  
                <h3><%= post.title %></span></h3>
                <p>
                <div style="background-color:Silver;width:500px;border-bottom:outset 1px black;border-right:outset 1px black;"><%= post.content%></div>
                <div><apan style="font-size:10px;">Posted by: <strong><%=post.username%></strong> on <%=post.created%></span></div>
                <br>
                <%   for( var j = 0; j < blogs.length; j++) { %>
                <%       var blog = blogs[j] %>
                    <div style="background-color:#E6E6E6;width:500px;"><%= blog.comment%></div>
                    <div><apan style="font-size:10px;">Comment by: <strong><%=blog.username%></strong> on <%=blog.created%></span></div>
                    </br>
                 <% } %>  
                <% if (user) { %>
                    <div>
                        <form action="/blog" method="post">
                            <input type="hidden" name="username" value="<%=user.username%>">  
                            <input type="hidden" name="postId" value="<%=post._id%>">    
                            <input style="width:500px;" type="text" class="form-control" name="comment">
                            <button type="submit" name="login" onclick="submitForm('/login')">Post</button>
                        </form>
                    </div>
                <% } %>  
                </br>
                </br>          
        <%   } %>
        <% } %>
</div>
</body>
</html>